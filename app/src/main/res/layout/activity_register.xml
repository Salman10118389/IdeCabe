<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:src="@drawable/logo_brin"
        android:layout_marginTop="@dimen/_20sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/exo_2"
            android:gravity="center_horizontal"
            android:text="Register New Account"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:text="Create Mew Account here"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/exo_2"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_12ssp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    app:passwordToggleEnabled="true"
                    android:background="@color/white"
                    style="@style/LoginTextInputOuterFieldStyle"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputOuterFieldStyle"
                        android:inputType="textEmailAddress"
                        android:hint="Enter your full name here"
                        android:background="@color/white"
                        android:fontFamily="@font/exo_2"
                        android:elevation="@dimen/_10sdp"/>

                </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        >


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="@dimen/_20sdp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:inputType="textEmailAddress"
                android:hint="Enter your email Here"
                android:fontFamily="@font/exo_2"
                android:paddingLeft="@dimen/_4sdp"
                android:background="@color/white"
                android:elevation="@dimen/_10sdp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="@dimen/_32sdp"
            app:passwordToggleEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:fontFamily="@font/exo_2"
                android:inputType="textPassword"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:hint="Enter your password Here"
                android:paddingLeft="@dimen/_4sdp"
                android:background="@color/white"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_8sdp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="@dimen/_32sdp"
            app:passwordToggleEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:fontFamily="@font/exo_2"
                android:inputType="textPassword"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:hint="Re-Type your password Here"
                android:paddingLeft="@dimen/_4sdp"
                android:background="@color/white"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_16sdp"
        android:elevation="@dimen/_10sdp"
        android:id="@+id/btn_register"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#F1F1F1"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have an account ? "
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_14ssp"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>